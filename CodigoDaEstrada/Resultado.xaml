<Page
    x:Class="CodigoDaEstrada.Resultado"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodigoDaEstrada"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="48" HorizontalAlignment="Center">Resultado:</TextBlock>
            <TextBlock Name="tbkResultado1" HorizontalAlignment="Center" FontSize="48" FontWeight="Bold">Passou</TextBlock>
            <TextBlock Name="tbkResultado2" HorizontalAlignment="Center" FontSize="48" FontWeight="Bold">Errou n perguntas</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnOK" HorizontalAlignment="Center" FontSize="22" Click="btnOK_Click" Margin="20">OK</Button>
            <Button Name="btnVerRespostas" HorizontalAlignment="Center" FontSize="22" Click="btnVerRespostas_Click" Margin="20">Ver respostas</Button>
        </StackPanel>
    </Grid>
</Page>